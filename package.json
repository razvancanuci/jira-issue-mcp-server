{
  "name": "jira-issue-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for creating Jira issues",
  "type": "module",
  "main": "index.ts",
  "module": "src/index.ts",
  "bin": {
    "jira-tool-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "start": "npm run build && node dist/index.js"
  },
  "keywords": [
    "mcp",
    "jira",
    "atlassian",
    "model-context-protocol",
    "api",
    "create-issue"
  ],
  "author": "Razvan Canuci <razvan.canuci@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.11.0",
    "axios-retry": "^4.5.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "open": "^10.2.0",
    "simple-oauth2": "^5.1.0",
    "winston": "^3.17.0",
    "winston-elasticsearch": "^0.19.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.14",
    "@types/open": "^6.1.0",
    "@types/simple-oauth2": "^5.0.7",
    "typescript": "^5.8.3"
  }
}
